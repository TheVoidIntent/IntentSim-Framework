{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "rootDir": "./src"
  },
  "files": [
    "src/index.ts",
    "src/example.ts",
    "src/types/intent.ts",
    "src/types/field.ts",
    "src/types/symbolic.ts",
    "src/types/cognition.ts",
    "src/types/ethics.ts",
    "src/types/persona.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}